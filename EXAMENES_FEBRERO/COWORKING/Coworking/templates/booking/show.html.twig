{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Inicio</th>
                <td>{{ booking.startAt ? booking.startAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Creada</th>
                <td>{{ booking.createdAt ? booking.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ booking.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_booking_index') }}">Volver</a>

    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">Editar</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
