{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Socio</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ member.name }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ member.surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Fecha de registro</th>
                <td>{{ member.registeredAt ? member.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_member_index') }}">Volver</a>

    <a href="{{ path('app_member_edit', {'id': member.id}) }}">Editar</a>

    {{ include('member/_delete_form.html.twig') }}
{% endblock %}
