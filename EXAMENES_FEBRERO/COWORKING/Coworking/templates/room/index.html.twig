{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block nav %}
    <nav>
        <ul>
            <li><a href="{{ path('Gestor_reservas_coworking') }}">Inicio</a></li>
            <li><a href="{{ path('app_room_index') }}">Salas</a></li>
            <li><a href="{{ path('app_member_index') }}">Socios</a></li>
            <li><a href="{{ path('app_booking_index') }}">Reservas</a></li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <h1>Salas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Capacidad</th>
                <th>Activa</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.capacity }}</td>
                <td>{{ room.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_room_show', {'id': room.id}) }}">Mostrar</a>
                    <a href="{{ path('app_room_edit', {'id': room.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_room_new') }}">Crear nuevo sala</a>
{% endblock %}
