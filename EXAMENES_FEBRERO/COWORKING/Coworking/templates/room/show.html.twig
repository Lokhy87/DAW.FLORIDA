{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Sala</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Capacidad</th>
                <td>{{ room.capacity }}</td>
            </tr>
            <tr>
                <th>Activa</th>
                <td>{{ room.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_room_index') }}">Volver</a>

    <a href="{{ path('app_room_edit', {'id': room.id}) }}">Editar</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
