{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Pelicula</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Genero</th>
                <td>{{ movie.genre }}</td>
            </tr>
            <tr>
                <th>Duracion (minutos)</th>
                <td>{{ movie.duration }}</td>
            </tr>
            <tr>
                <th>Puntuacion</th>
                <td>{{ movie.rating }}</td>
            </tr>
            <tr>
                <th>Disponibilidad</th>
                <td>{{ movie.isAvailable ? 'Si' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_movie_index') }}">Volver a la lista</a>

    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}">Editar</a>

    {{ include('movie/_delete_form.html.twig') }}
{% endblock %}
