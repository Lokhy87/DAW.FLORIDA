{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Reservas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Pelicula</th>
                <td>{{ booking.movie.title }}</td>
            </tr>
            <tr>
                <th>Sala</th>
                <td>{{ booking.room.name }}</td>
            </tr>

            <tr>
                <th>Fecha de reserva</th>
                <td>{{ booking.bookingDate ? booking.bookingDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Asientos</th>
                <td>{{ booking.seats }}</td>
            </tr>
            <tr>
                <th>Nombre del cliente</th>
                <td>{{ booking.customerName }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_booking_index') }}">Volver a la lista</a>

    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">Editar</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
